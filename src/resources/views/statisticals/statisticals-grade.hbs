<section class="statistical__list">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="card-title text-uppercase">Lớp {{grade.name}}</div>
                    <div class="d-flex align-items-center">
                        <form class="mb-0" action="/statisticals/{{grade._id}}/export" method="POST">
                            <button class="btn btn-outline-primary btn-icon-text" type="submit">
                                <i class="mdi mdi-file-excel btn-icon-prepend"></i>
                                Xuất excel
                            </button>
                        </form>
                        <a class="btn btn-outline-warning btn-icon-text ml-4" href="/grade/list"> 
                            <i class="mdi mdi-reload btn-icon-prepend"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
                <hr>
                <div class="card-title">Thống kê kết quả học tập</div>
                <div class="table-responsive pt-3">
                    <table id="bootstrap-data-table" class="table table-hover table-striped table-bordered text-dark">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">#</th>
                                <th class="font-weight-bold">Thành viên</th>
                                <th class="font-weight-bold">Email</th>
                                <th class="font-weight-bold">Tổng điểm tích lũy</th>
                                {{!-- <th class="font-weight-bold">Tiến trình học</th>
                                <th class="font-weight-bold">Đánh giá</th> --}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each ranks}}
                            <tr>
                                    <td>{{sum @index 1}}</td>
                                    {{#this.user}}
                                        <td>
                                        
                                            <a class="d-flex align-items-center" href="/user/{{_id}}/edit">
                                                <img src="{{avatar}}">
                                                <span class="ml-2">{{fullname}}</span>
                                            </a>
                                            
                                        </td>
                                    <td>{{email}}</td>
                                    {{/this.user}}
                                    <td>{{this.totalScore}}</td>
                                    {{!-- <td>Hoàn thành {{this.totalLessonDone}}/{{countLessons}} bài học ({{ percent this.totalLessonDone countLessons }}%)</td>
                                    {{#ifCond (percent this.totalLessonDone countLessons) ">=" 50}}    
                                        <td>Đạt</td>
                                    {{else}}
                                        <td>Chưa đạt</td>
                                    {{/ifCond}} --}}
                            </tr>
                                {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>