<section class="users__list">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                {{#ifCond usersValid.length ">" 0}}
                    <h4 class="card-title">
                    Danh sách người dùng đã tạo thành công
                    </h4>
                    <div class="table-responsive pt-3 mb-5">
                        <table class="table table-hover text-dark">
                            <thead>
                                <tr>
                                    <th class="font-weight-bold">#</th>
                                    <th class="font-weight-bold">Ảnh</th>
                                    <th class="font-weight-bold">Họ và tên</th>
                                    <th class="font-weight-bold">Số điện thoại</th>
                                    <th class="font-weight-bold">Email</th>
                                    <th class="font-weight-bold">Ngày sinh</th>
                                    <th class="font-weight-bold">Địa chỉ</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each usersValid}}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td class="py-1">
                                            <img src="/img/nobody.jpg" >
                                        </td>
                                        <td>{{this._doc.fullname}}</td>
                                        <td>{{this._doc.phone}}</td>
                                        <td>{{this._doc.email}}</td>
                                        <td>{{formatDate this.birthDay}}</td>
                                        <td>{{this._doc.address}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{/ifCond}}   
                {{#ifCond usersInvalid.length ">" 0}}
                    <h4 class="card-title text-danger">
                        Danh sách người dùng "KHÔNG HỢP LỆ" (Số điện thoại hoặc email bị trùng)
                    </h4>
                    <div class="table-responsive pt-3">
                         <table class="table table-hover text-dark">
                            <thead>
                                <tr>
                                    <th class="font-weight-bold">#</th>
                                    <th class="font-weight-bold">Ảnh</th>
                                    <th class="font-weight-bold">Họ và tên</th>
                                    <th class="font-weight-bold">Số điện thoại</th>
                                    <th class="font-weight-bold">Email</th>
                                    <th class="font-weight-bold">Ngày sinh</th>
                                    <th class="font-weight-bold">Địa chỉ</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each usersInvalid }}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td class="py-1">
                                            <img src="/img/nobody.jpg" >
                                        </td>
                                        <td>{{this._doc.fullname}}</td>
                                        <td>{{this._doc.phone}}</td>
                                        <td>{{this._doc.email}}</td>
                                        <td>{{formatDate this.birthDay}}</td>
                                        <td>{{this._doc.address}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                         </table>
                    </div>
                {{/ifCond}}
                <a href="/user/list" class="btn btn-outline-warning btn-icon-text ml-auto">
                    <i class="mdi mdi-reload btn-icon-prepend"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </div>
</section>     